<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    
    <!-- Base application theme with pink color scheme and RTL support -->
    <style name="Theme.ArchaeologyField" parent="Theme.Material3.DayNight">
        <!-- Primary brand color - Pink -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        
        <!-- Secondary brand color - Teal -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/overlay</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- RTL support -->
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        
        <!-- High contrast buttons for outdoor use -->
        <item name="android:buttonStyle">@style/HighContrastButton</item>
        <item name="materialButtonStyle">@style/HighContrastMaterialButton</item>
        
        <!-- Card style -->
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">6dp</item>
        
        <!-- App bar styling -->
        <item name="appBarLayoutStyle">@style/PinkAppBar</item>
    </style>
    
    <!-- High contrast button style for outdoor visibility -->
    <style name="HighContrastButton" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="HighContrastMaterialButton" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:elevation">4dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Primary button style - Pink -->
    <style name="PrimaryButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/button_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <!-- Secondary button style - Teal -->
    <style name="SecondaryButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/button_secondary</item>
        <item name="android:textColor">@color/text_on_secondary</item>
    </style>
    
    <!-- Success button style -->
    <style name="SuccessButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/button_success</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <!-- Danger button style -->
    <style name="DangerButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/button_danger</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <!-- Warning button style -->
    <style name="WarningButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/button_warning</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <!-- Specialized button styles for field operations -->
    <style name="ScanButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/scan_button</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <style name="CameraButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/camera_button</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <style name="VoiceButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/voice_button</item>
        <item name="android:textColor">@color/text_on_secondary</item>
    </style>
    
    <style name="GPSButton" parent="HighContrastMaterialButton">
        <item name="android:backgroundTint">@color/gps_button</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <!-- Card style for RTL -->
    <style name="RTLCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
    </style>
    
    <!-- Text input style for RTL -->
    <style name="RTLTextInput" parent="Widget.Material3.TextInputLayout">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:textAlignment">viewStart</item>
    </style>
    
    <!-- Toolbar style with pink theme -->
    <style name="RTLToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <item name="titleTextColor">@color/text_on_primary</item>
        <item name="subtitleTextColor">@color/text_on_primary</item>
        <item name="android:background">@color/primary</item>
    </style>
    
    <!-- App bar style with logo support -->
    <style name="PinkAppBar" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">8dp</item>
    </style>
    
    <!-- Splash screen theme with logo -->
    <style name="Theme.ArchaeologyField.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ArchaeologyField</item>
    </style>
    
</resources>