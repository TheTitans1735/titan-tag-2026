<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@color/background"
    tools:context=".ui.voice.VoiceRecognitionActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="הקלטה קולית"
            android:textColor="@color/text_on_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="מוכן להקלטה"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@color/secondary_light"
        android:padding="12dp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Transcription Display -->
    <ScrollView
        android:id="@+id/scroll_transcription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintBottom_toTopOf="@id/button_controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_transcription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/surface"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:gravity="top|start"
            android:minHeight="200dp"
            android:hint="התמלול יופיע כאן..."
            android:textColorHint="@color/text_hint" />

    </ScrollView>

    <!-- Control Buttons -->
    <LinearLayout
        android:id="@+id/button_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/close_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Start/Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_start_stop"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="8dp"
            android:text="התחל הקלטה"
            android:textSize="16sp"
            android:textStyle="bold"
            style="@style/VoiceButton"
            app:icon="@drawable/ic_microphone"
            app:iconGravity="textStart" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Clear Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="נקה"
                android:textSize="14sp"
                style="@style/SecondaryButton" />

            <!-- Use Text Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_use_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="השתמש בטקסט"
                android:textSize="14sp"
                style="@style/SuccessButton" />

        </LinearLayout>

    </LinearLayout>

    <!-- Close Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/close_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:text="סגור"
        android:textSize="14sp"
        style="@style/DangerButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>